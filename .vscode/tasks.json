// Note to the AI Assistant:
// This task starts the repl in a way that CoPilot can't follow its output.
// The AI assistant should start the REPL by executing `npm run watch` directly
// as described in the the .github/AI_ASSISTANT.md doc and dev/PROJECT_REQUIREMENTS.md docs
{
	"version": "2.0.0",
	"tasks": [
			{
					"label": "Build+watch extension",
					"type": "shell",
					"command": "${command:default}",
					"args": ["${args:default}"],
					"problemMatcher": [],
					"group": {
							"kind": "build",
							"isDefault": true
					},
					"windows": {
							"command": "cmd.exe",
							"args": ["/d", "/c", "npm run watch"]
					},
					"linux": {
							"command": "/bin/bash",
							"args": ["-l", "-c", "npm run watch"]
					},
					"osx": {
							"command": "/bin/bash",
							"args": ["-l", "-c", "npm run watch"]
					}
			}
	]
}
